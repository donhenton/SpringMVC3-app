<?xml version="1.0" encoding="UTF-8"?>

<!--  this is loaded via contextloaderlistener in web.xml -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
                http://www.springframework.org/schema/context         http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	 <bean id="bookMaker"        class="com.dhenton9000.spring.mvc.model.BookMakerImpl" />
	 <!-- 
	 
	  when autowiring to an interface there can only be one implementation
	 <bean id="jHellerBookMaker" class="com.dhenton9000.spring.mvc.model.BestSellerBookMakerImpl" />
	 
    -->
    <context:property-placeholder />      
          
    <bean class="java.net.URI" id="dbUrl">
        <constructor-arg value="${DATABASE_URL}"/>
    </bean>
	

</beans>
